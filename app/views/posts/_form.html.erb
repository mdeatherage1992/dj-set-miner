<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="description">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="audience">
    <%= f.label :audience %><br>
    <%= f.text_field :audience %>
  </div>
  <div class="video">
    <%= f.label :video %><br>
    <%= f.text_field :video %>
  </div>
  <div class="genre"> <%=f.label :genre_ids, "What's the Genre?" %><br>
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %><br>
    <%= f.fields_for :genres, @post.genres.build do |genres_fields| %>
      <%= genres_fields.text_field :name, placeholder: "Add Genre Here!" %>
      <% end %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
